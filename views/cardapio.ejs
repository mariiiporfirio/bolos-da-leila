<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Link para ícones do Google Fonts -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,-25" />
  <!-- Link para Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <!-- Link para Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <!-- Link para arquivo CSS personalizado -->
  <link rel="stylesheet" href="estilos/style.css" />
  <title>Leila Bolos - Cardapio </title>
</head>

<body id="top">
  <header>

    <div class="hamburger">
      <div></div>
      <div></div>
      <div></div>
    </div>
    <ul class="menu">
      <li> <a class="link_logo" href="#top"><img class="logo" src="logos/logo6.png" alt="logo_leilabolos" /></a></li>
      <li> <a href="/"><img class="logo" src="logos/Bolos da Leila.png" style="width: 22rem;"
            alt="logo_leilabolos" /></a></li>
      <li></li>
      <li></li>
      <li><a href="/historia">História</a></li>
      <li><a href="/cardapio">Cardápio</a></li>
      <li><a href="/contato">Contato</a></li>
      <li>
        <!-- Carrinho no Menu (CORRIGIDO: adicionado data-target) -->
        <div id="carrinho-menu">
          <a href="#" data-toggle="modal" data-target="#carrinhoModal">
            <img class="logo_menu" src="logos/carrinho-de-compras.png" alt="logo_carrinho" />
          </a>
        </div>

        <a href="/login"><img class="logo_menu" src="logos/do-utilizador.png" alt="logo_perfil"></a>
      </li>
    </ul>
  </header>


  <main>
    <div class="container mt-5">
      <h1 class="titulo_cardapio">Nosso Cardápio de Delícias</h1>
      <div class="row">
        <% produtos.forEach(produto => { %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card">
              <img src="<%= produto.imagem %>" class="card-img-top" alt="<%= produto.nome %>">
              <div class="card-body">
                <h5 class="card-title"><%= produto.nome %></h5>
                <p class="card-text">R$ <%= parseFloat(produto.preco).toFixed(2) %></p>
                <button class="btn btn-primary" onclick="addToCart('<%= produto.id %>', '<%= produto.nome %>', '<%= produto.preco %>')">Adicionar ao Carrinho</button>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#detalhesModal<%= produto.id %>">Detalhes</button>
              </div>
            </div>
          </div>
        
          <!-- Modal de Detalhes -->
          <div class="modal fade" id="detalhesModal<%= produto.id %>" tabindex="-1" role="dialog" aria-labelledby="detalhesModalLabel<%= produto.id %>" aria-hidden="true">
            <div class="modal-dialog" role="document"> 
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="detalhesModalLabel<%= produto.id %>"><%= produto.nome %></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                  </button>
                </div>
                <div class="modal-body">
                  <img src="<%= produto.imagem %>" alt="<%= produto.nome %>" class="img-fluid">
                  <p>Descrição: <%= produto.descricao %></p> 
                  <p>Preço: R$ <%= parseFloat(produto.preco).toFixed(2) %></p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                  <button type="button" class="btn btn-primary" onclick="addToCart('<%= produto.id %>', '<%= produto.nome %>', '<%= produto.preco %>')">Adicionar ao Carrinho</button>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </main>

  <!-- Modal do Carrinho -->
  <div class="modal fade" id="carrinhoModal" tabindex="-1" role="dialog" aria-labelledby="carrinhoModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="carrinhoModalLabel">Seu Carrinho</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <ul id="itensCarrinho"></ul>
          <p id="totalCarrinho">Total: R$ 0,00</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <a href="/checkout" class="btn btn-primary">Finalizar Compra</a>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <%-include('./parciais/footer.ejs') %>
  </footer>



  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="script.js"></script>
</body>

</html>